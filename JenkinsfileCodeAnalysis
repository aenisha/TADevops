pipeline {
    agent any
    environment {
        scannerHome = tool 'sonar6.1'
    }
    stages {
        stage('Build') {
            when {
                branch 'main' // Build only on 'main' branch
            }
            steps {
                sh 'mvn -f pom.xml install -DskipTests'
            }
            post {
                success {
                    echo 'Now Archiving it...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
    }
}

